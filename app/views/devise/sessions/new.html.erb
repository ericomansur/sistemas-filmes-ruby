<div class="min-h-screen flex items-center justify-center -mt-8">
  <div class="max-w-md w-full">
    <!-- Logo/Title -->
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold mb-2 bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
        ðŸŽ¬ CineMatch
      </h1>
      <p class="text-gray-400 text-lg">Entre na sua conta</p>
    </div>

    <!-- Login Form -->
    <div class="bg-gray-800 rounded-lg p-8 border border-gray-700 shadow-xl">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        
        <!-- Email -->
        <div>
          <%= f.label :email, "E-mail", class: "block text-white font-medium mb-2" %>
          <%= f.email_field :email, 
                           autofocus: true, 
                           autocomplete: "email",
                           placeholder: "seu@email.com",
                           class: "w-full bg-gray-700 border border-gray-600 text-white rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, "Senha", class: "block text-white font-medium mb-2" %>
          <%= f.password_field :password, 
                              autocomplete: "current-password",
                              placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
                              class: "w-full bg-gray-700 border border-gray-600 text-white rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "rounded text-indigo-600 focus:ring-indigo-500 bg-gray-700 border-gray-600" %>
            <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 text-gray-300 text-sm" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Entrar", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg transition cursor-pointer transform hover:scale-105" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center space-y-2">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "block text-indigo-400 hover:text-indigo-300 text-sm transition" %>
        
        <div class="text-gray-400 text-sm">
          NÃ£o tem uma conta?
          <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "text-indigo-400 hover:text-indigo-300 font-semibold transition" %>
        </div>
      </div>
    </div>

    <!-- Back to Home -->
    <div class="text-center mt-6">
      <%= link_to root_path, class: "text-gray-400 hover:text-white text-sm transition inline-flex items-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Voltar para home
      <% end %>
    </div>
  </div>
</div>