                <div class="flex items-center">
                  <span class="text-yellow-400 text-xs">â­</span>
                  <span class="text-gray-400 text-xs ml-1"><%= watch_later.rating&.round(1) || "N/A" %></span>
                </div>
                
                <% if watch_later.release_date.present? %>
                  <span class="text-xs text-gray-400">
                    <%= Date.parse(watch_later.release_date).year rescue "" %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Hover Overlay -->
          <div class="absolute inset-0 bg-black bg-opacity-90 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col items-center justify-center p-4 rounded-lg">
            <h4 class="text-white font-semibold text-center mb-3 line-clamp-2"><%= watch_later.title %></h4>
            
            <% if watch_later.overview.present? %>
              <p class="text-gray-300 text-xs text-center mb-4 line-clamp-3">
                <%= watch_later.overview %>
              </p>
            <% end %>
            
            <div class="flex flex-col gap-2 w-full">
              <%= link_to "https://www.themoviedb.org/movie/#{watch_later.tmdb_id}", 
                         target: "_blank",
