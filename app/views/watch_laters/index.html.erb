      <% @watch_laters.each do |watch_later| %>
        <div class="group relative">
          <div class="bg-gray-800 rounded-lg overflow-hidden border border-gray-700 hover:border-yellow-500 transition">
            <% if watch_later.poster_path %>
              <%= image_tag watch_later.poster_url, alt: watch_later.title, class: "w-full h-80 object-cover" %>
